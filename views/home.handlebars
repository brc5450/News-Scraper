<!--Homepage-->
<div class="container">
    <div class="col-md-12 jumbotron">
        <div class="text-center text-white">
            <h1>New York Times News Scraper</h1>
            <h4>scrape, save and comment on your favorite New York Times articles.</h4>
        </div>

    </div>
    <div class="col-md-12">
        {{#if article}}
            {{#each article}}
            <div class="panel panel-default">
                <div class="panel-heading">
                    <h4>{{this.title}}</h4>
                </div>
                <div class="panel-body">
                    <p> {{this.summary}}</p>
                    <a href={{this.link}} target="_blank">{{this.link}}</a>
                    <br><br>
                    <!-- Button -->
                    <button type="button" class="btn btn-default save" data-id={{this._id}}><i class="glyphicon glyphicon-ok"></i>&nbspSave Article</button>
                </div>
            </div>
            {{/each}}
        {{else}}
        <div class="panel panel-default">
            <div class="panel-body">
            <h4>Sorry, it looks like we don't have any new articles.</h4>
            </div>
         </div>
        {{/if}}
    </div>
</div>